#!/bin/bash

clear
echo "===================================="
echo "         TRIPPLE NODES              "
echo "      Advanced VPS Installer        "
echo "===================================="
echo ""
echo "1) Install Pterodactyl Panel"
echo "2) Install Wings (Node)"
echo "3) Setup Basic VPS Environment"
echo "4) Install Cloudflare Tunnel"
echo "5) Exit"
echo ""
read -p "Select an option: " option

case $option in
1)
    echo "Installing Pterodactyl Panel..."
    bash <(curl -s https://pterodactyl-installer.se)
    ;;
2)
    echo "Installing Wings..."
    sudo apt install docker.io -y
    ;;
3)
    echo "Setting up VPS..."
    sudo apt update -y
    sudo apt install -y curl wget git screen openssh-server
    ;;
4)
    echo "Installing Cloudflare Tunnel..."
    curl -fsSL https://cloudflare.com/cdn-cgi/install.sh | bash
    ;;
5)
    echo "Exiting..."
    ;;
*)
    echo "Invalid option."
    ;;
esac
